{
  "name": "wakanda-client",
  "main": "dist/wakanda-client.node.js",
  "version": "2.0.0",
  "description": "Wakanda Client allows you to easily interact with Wakanda Server on a JavaScript (browser or node) environment",
  "typings": "dist/wakanda-client.d.ts",
  "browser": "dist/wakanda-client.min.js",
  "repository": "wakanda/wakanda-javascript-client",
  "scripts": {
    "watch": "webpack --progress --colors --watch",
    "build": "webpack --progress --colors",
    "build:ci": "webpack --progress --colors --config webpack.ci.js",
    "build:prod": "webpack --progress --colors --config webpack.prod.js",
    "test:karma:single": "karma start",
    "test:karma:full": "npm run build && npm run test:karma:single",
    "test:node:single": "mocha test/bootstrap.js test/spec/**/*.spec.js",
    "test:node:full": "npm run build && npm run test:node:single",
    "test-single": "./test.sh single",
    "test": "./test.sh",
    "test-server:start": "node test/connect/server.js",
    "test-server:record": "rimraf test/connect/mocks && npm run build && node test/connect/server.js record",
    "test-server:runtests": "npm run test:node:single && npm run test:karma:single",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "tsc": "tsc",
    "serve": "concurrently -r \"npm run watch\" \"gulp serve\""
  },
  "author": "Wakanda SAS",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chalk": "^2.3.0",
    "codecov.io": "^0.1.6",
    "concurrently": "^3.5.0",
    "connect": "^3.6.5",
    "connect-prism": "^1.0.18",
    "eslint": "^4.11.0",
    "eslint-loader": "^1.9.0",
    "express": "^4.16.2",
    "grunt": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-connect": "^5.0.0",
    "http-proxy-middleware": "^0.17.4",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.7",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-verbose-reporter": "0.0.6",
    "mocha": "^4.0.1",
    "path": "^0.12.7",
    "phantomjs-prebuilt": "^2.1.16",
    "rimraf": "^2.6.2",
    "serve-static": "^1.13.1",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "core-js": "^2.5.1",
    "request": "^2.83.0"
  }
}
